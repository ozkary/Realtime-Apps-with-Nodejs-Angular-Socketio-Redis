{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app.core/*": [
        "app/core/*"
      ],
      "@app.features/*": [
        "app/features/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    },
    "module": "es2020"
  }
}